@page "/admin-receipts-overview"
@layout Layout.DashboardLayout
@using IT_13FinalProject.Models
@using IT_13FinalProject.Services
@inject IPatientBillService BillService

<div class="inv-page">
    <!-- Header same layout as other dashboard pages -->
    <header class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Invoicing and Cashiering</h1>
            <p class="dashboard-subtitle">Welcome back Admin!</p>
        </div>

        <div class="dashboard-user-info">
            <span class="dashboard-user-email">admin@gmail.com</span>
            <div class="dashboard-user-avatar">ðŸ‘¤</div>
            <span class="dashboard-user-name">Admin</span>
        </div>
    </header>

    <!-- ===================== RECEIPT OVERVIEW ===================== -->
    <section class="inv-card">
        <div class="inv-controls">
            <h2 class="inv-section-title">Receipt Overview</h2>

            <div class="inv-tabs-row">
                <span class="inv-tabs-label">Recent</span>
                <div class="inv-tabs">
                    <button class="inv-tab" @onclick="GoToBills">Bills</button>
                    <button class="inv-tab inv-tab-active">Receipt</button>
                </div>
            </div>

            <div class="inv-search-row">
                <div class="inv-search-box">
                    <span class="inv-search-icon"></span>
                    <input class="inv-search-input" placeholder="Search Patient" @bind-value="SearchTerm" @bind-value:event="oninput" @bind-value:after="SearchReceiptsAsync" />
                </div>

                <div class="inv-actions">
                    <button class="inv-action-btn">Sort</button>
                    <button class="inv-action-btn">Filters</button>
                </div>
            </div>
        </div>

        <div class="inv-list">
            @if (isLoading)
            {
                <div class="inv-row">
                    <div class="inv-row-main">
                        <div class="inv-row-name">
                            <span class="inv-row-value">Loading receipts...</span>
                        </div>
                    </div>
                </div>
            }
            else if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="inv-row">
                    <div class="inv-row-main">
                        <div class="inv-row-name">
                            <span class="inv-row-value">@errorMessage</span>
                        </div>
                    </div>
                </div>
            }
            else if (!FilteredBills.Any())
            {
                <div class="inv-row">
                    <div class="inv-row-main">
                        <div class="inv-row-name">
                            <span class="inv-row-value">No receipts found.</span>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @foreach (var bill in FilteredBills)
                {
                    var b = bill;
                    <div class="inv-row">
                        <div class="inv-row-main">
                            <div class="inv-row-name">
                                <span class="inv-row-label">Name</span>
                                <span class="inv-row-value">@b.PatientName</span>
                            </div>
                        </div>
                        <div class="inv-row-columns">
                            <div class="inv-row-col">
                                <span class="inv-row-label">Amount</span>
                                <span class="inv-row-value">â‚±@b.TotalAmount.ToString("N2")</span>
                            </div>
                            <div class="inv-row-col">
                                <span class="inv-row-label">Date</span>
                                <span class="inv-row-value">@b.DateOfVisit.ToString("MM/dd/yy")</span>
                            </div>
                            <div class="inv-row-col">
                                <span class="inv-row-label">Status</span>
                                <span class="inv-row-value">@b.PaymentStatus</span>
                            </div>
                            <div class="inv-row-col inv-row-col-action">
                                <button class="inv-view-btn" @onclick="() => ViewBillReceipt(b.BillId)">
                                    <span class="inv-view-icon"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="inv-pagination">
            <button class="inv-page-btn">Previous</button>
            <button class="inv-page-number inv-page-number-active">1</button>
            <button class="inv-page-number">2</button>
            <button class="inv-page-number">3</button>
            <span class="inv-page-dots">...</span>
            <button class="inv-page-number">8</button>
            <button class="inv-page-btn">Next</button>
        </div>
    </section>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private List<PatientBill> Bills { get; set; } = new();
    private List<PatientBill> FilteredBills { get; set; } = new();
    private bool isLoading { get; set; } = true;
    private string? errorMessage { get; set; }
    private string SearchTerm { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadReceiptsAsync();
    }

    private void GoToBills()
    {
        Navigation.NavigateTo("/admin-invoicing-overview");
    }

    private void ViewBillReceipt(int billId)
    {
        Navigation.NavigateTo($"/admin-receipt-pdf?billId={billId}");
    }

    private static bool IsReceiptBill(PatientBill b)
    {
        var status = (b.PaymentStatus ?? string.Empty).Trim();
        return status.Equals("Paid", StringComparison.OrdinalIgnoreCase);
    }

    private async Task LoadReceiptsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            Bills = (await BillService.GetAllAsync(includeArchived: false)).ToList();
            FilteredBills = Bills.Where(IsReceiptBill).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading receipts: {ex.GetBaseException().Message}";
            Bills = new();
            FilteredBills = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchReceiptsAsync()
    {
        try
        {
            errorMessage = null;

            IReadOnlyList<PatientBill> results;
            if (string.IsNullOrWhiteSpace(SearchTerm))
            {
                results = Bills;
            }
            else
            {
                results = await BillService.SearchAsync(SearchTerm);
            }

            FilteredBills = results.Where(IsReceiptBill).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error searching receipts: {ex.GetBaseException().Message}";
        }
        finally
        {
            StateHasChanged();
        }
    }
}




