@page "/admin-health-records"
@layout Layout.DashboardLayout
@using IT_13FinalProject.Services

<div class="pm-page">
    <!-- Header reusing the same style as Dashboard/Patient Management -->
    <header class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Health Records</h1>
            <p class="dashboard-subtitle">Welcome back Admin!</p>
        </div>

        <div class="dashboard-user-info">
            <span class="dashboard-user-email">admin@gmail.com</span>
            <div class="dashboard-user-avatar">ðŸ‘¤</div>
            <span class="dashboard-user-name">Admin</span>
        </div>
    </header>

    <!-- ===================== PATIENT RECORDS OVERVIEW ===================== -->
    <section class="pm-overview">
        <div class="pm-overview-header">
            <h2 class="pm-section-title">Patient Records Overview</h2>
            <div class="pm-show-entries">
                <span>Show</span>
                <select>
                    <option>5</option>
                    <option>10</option>
                    <option>25</option>
                </select>
                <span>entries</span>
            </div>
        </div>

        <div class="pm-filters-row">
            <div class="pm-search-row">
                <div class="pm-search-box">
                    <span class="pm-search-icon"></span>
                    <input class="pm-search-input" placeholder="Search Patient" />
                </div>

                <div class="pm-actions">
                    <button class="activity-action-btn">Sort</button>
                    <button class="activity-action-btn">Filters</button>
                </div>
            </div>
        </div>

        <div class="pm-table-outer">
            <div class="pm-table-wrapper">
                <table class="pm-table">
                    <thead>
                        <tr>
                            <th class="pm-col-patient">Patient Name</th>
                            <th class="pm-col-doctor">Doctor's Name</th>
                            <th class="pm-col-nurse">Nurse Assist</th>
                            <th class="pm-col-date">Date of Check-up</th>
                            <th class="pm-col-status">Visit Status</th>
                            <th class="pm-col-action">More Info</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in ActiveLetter.HasValue ? GetOrderedRecords(ActiveLetter.Value).Select((record, index) => new { Record = record, Index = index + 1 }) : Records.Select((record, index) => new { Record = record, Index = index + 1 }))
                        {
                            var r = row.Record;
                            <tr>
                                <td>
                                    <div class="pm-patient-name">@r.PatientName</div>
                                    <div class="pm-patient-email">@r.PatientEmail</div>
                                </td>
                                <td>
                                    <div class="pm-patient-name">@r.DoctorName</div>
                                    <div class="pm-patient-email">@r.DoctorEmail</div>
                                </td>
                                <td>
                                    <div class="pm-patient-name">@r.NurseName</div>
                                    <div class="pm-patient-email">@r.NurseEmail</div>
                                </td>
                                <td class="pm-col-date">@r.DateOfCheckup</td>
                                <td class="pm-col-status">@r.VisitStatus</td>
                                <td class="pm-col-action">
                                    <button class="pm-view-btn" @onclick="() => ViewRecord(r)" aria-label="View patient record">
                                        <span class="pm-view-icon"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

            <div class="pm-pagination">
                <button class="pm-page-btn">Previous</button>
                <button class="pm-page-number active">1</button>
                <button class="pm-page-number">2</button>
                <button class="pm-page-number">3</button>
                <span class="pm-page-dots">...</span>
                <button class="pm-page-number">8</button>
                <button class="pm-page-btn">Next</button>
            </div>
    </section>
</div>

@code {
    

    
    
    private bool ShowPagination { get; set; } = true;
    private bool ShowLetters { get; set; } = false;
    private char? ActiveLetter { get; set; }
    
    private readonly char[] Alphabet =
        "ABCDEFGHIJKLMNOPQRSTUVWXYZ".ToCharArray();

    private List<HealthRecord> Records { get; set; } = new();

    [Inject]
    private IHealthRecordService HealthRecordService { get; set; } = default!;

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    protected override void OnInitialized()
    {
        Records = HealthRecordService
            .GetAll()
            .OrderBy(r => r.PatientName)
            .ToList();
    }

    private void ViewRecord(HealthRecord record)
    {
        Navigation.NavigateTo($"/admin-patient-records/{record.Id}");
    }

    private void SelectLetter(char letter)
    {
        ShowLetters = true;
        ActiveLetter = letter;
    }

    private void TogglePagination()
    {
        ShowPagination = !ShowPagination;
    }

    

    

    private IEnumerable<HealthRecord> GetOrderedRecords(char letter)
    {
        if (string.IsNullOrEmpty(letter.ToString()))
        {
            return Records;
        }

        var upper = letter.ToString().ToUpper();

        var startsWithLetter = Records
            .Where(r => (r.PatientName ?? string.Empty).StartsWith(upper, StringComparison.OrdinalIgnoreCase));

        var others = Records
            .Where(r => !(r.PatientName ?? string.Empty).StartsWith(upper, StringComparison.OrdinalIgnoreCase));

        return startsWithLetter.Concat(others);
    }
}










