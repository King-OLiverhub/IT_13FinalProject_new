@page "/inventory-prescriptions"
@layout Layout.DashboardLayout
@using IT_13FinalProject.Services
@using IT_13FinalProject.Models

<div class="dashboard-page">
    <header class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Prescription</h1>
            <p class="dashboard-subtitle">Welcome back Pharmacist Staff!</p>
        </div>

        <div class="dashboard-user-info">
            <span class="dashboard-user-email">inventory@gmail.com</span>
            <div class="dashboard-user-avatar">ðŸ‘¤</div>
            <span class="dashboard-user-name">Pharmacist</span>
        </div>
    </header>

    <section class="ip-overview">
        <div class="ip-overview-header">
            <h2 class="ip-section-title">Prescription Overview</h2>
            <div class="ip-show-entries">
                <span>Show</span>
                <select @bind="PageSize" @bind:after="OnPageSizeChanged">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="25">25</option>
                </select>
                <span>entries</span>
            </div>
        </div>

        <div class="ip-filters-row">
            <div class="ip-tab-container">
                <button class="ip-tab-btn @(ShowArchived ? "" : "active")" @onclick="() => SetArchiveView(false)">
                    Active Records
                </button>
                <button class="ip-tab-btn @(ShowArchived ? "active" : "")" @onclick="() => SetArchiveView(true)">
                    Archived Records
                </button>
            </div>
            <div class="ip-alpha-filter">
                @if (ShowLetters)
                {
                    @foreach (var letter in Alphabet)
                    {
                        <button class="ip-filter-pill @("")"
                                >@letter</button>
                    }
                }
            </div>

            <div class="ip-search-row">
                <div class="ip-search-box">
                    <span class="ip-search-icon"></span>
                    <input class="ip-search-input" placeholder="Search Patient" value="@SearchTerm" @oninput="OnSearchInput" />
                </div>

                <div class="ip-actions">
                    <button class="ip-action-btn">Sort</button>
                    <button class="ip-action-btn">Filters</button>
                </div>
            </div>
        </div>

        <div class="ip-table-outer">
            <div class="ip-table-wrapper">
                <table class="ip-table">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Items</th>
                            <th>Status</th>
                            <th>Time</th>
                            <th class="ip-col-actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in PagedPrescriptions)
                        {
                            <tr>
                                <td>@p.Patient</td>
                                <td>@p.Doctor</td>
                                <td>@p.Items</td>
                                <td>
                                    <span class="ip-status-pill ip-status-@p.StatusKey">
                                        <span class="ip-status-dot"></span>
                                        <span>@p.StatusLabel</span>
                                    </span>
                                </td>
                                <td>@p.Time</td>
                                <td class="ip-actions-cell">
                                    <div class="ip-action-buttons">
                                        <button type="button" class="ip-view-btn" aria-label="View prescription" @onclick="() => OpenPrescriptionPanel(p)">
                                            <span class="ip-view-icon"></span>
                                        </button>
                                        @if (ShowArchived)
                                        {
                                            <button type="button" class="ip-restore-btn" aria-label="Restore prescription" @onclick="() => RestorePrescriptionAsync(p)">
                                                <span class="ip-restore-icon"></span>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="ip-archive-btn" aria-label="Archive prescription" @onclick="() => ArchivePrescriptionAsync(p)">
                                                <span class="ip-archive-icon"></span>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="ip-pagination">
            <button class="ip-page-btn" @onclick="PrevPage" disabled="@(CurrentPage <= 1)">Previous</button>
            <button class="ip-page-number active">@CurrentPage</button>
            <button class="ip-page-btn" @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)">Next</button>
        </div>
    </section>

    @if (ShowPrescriptionPanel && SelectedPrescription is not null)
    {
        <div class="ip-prescription-overlay">
            <div class="ip-prescription-panel">
                <h2 class="ip-prescription-title">Doctor's Prescription</h2>

                <div class="ip-prescription-grid">
                    <div class="ip-prescription-section">
                        <h3 class="ip-prescription-section-title">Patient Information</h3>
                        <div class="ip-prescription-field"><span>Name:</span><span>@SelectedPrescription.Patient</span></div>
                        <div class="ip-prescription-field"><span>Patient ID:</span><span>@(SelectedDetails?.PatientId?.ToString() ?? string.Empty)</span></div>
                        <div class="ip-prescription-field"><span>Contact Number:</span><span></span></div>
                        <div class="ip-prescription-field"><span>Date of Birth:</span><span></span></div>
                        <div class="ip-prescription-field"><span>Age:</span><span></span></div>
                        <div class="ip-prescription-field"><span>Address:</span><span></span></div>
                        <div class="ip-prescription-field"><span>Diagnosis:</span><span>@(SelectedDetails?.Diagnosis ?? SelectedDetails?.AssessmentDiagnosis ?? string.Empty)</span></div>
                    </div>

                    <div class="ip-prescription-section">
                        <h3 class="ip-prescription-section-title">Doctor's Information</h3>
                        <div class="ip-prescription-field"><span>Name:</span><span>@SelectedPrescription.Doctor</span></div>
                        <div class="ip-prescription-field"><span>License Number:</span><span></span></div>
                        <div class="ip-prescription-field"><span>Specialty:</span><span></span></div>
                        <div class="ip-prescription-field"><span>Contact Information:</span><span></span></div>
                    </div>
                </div>

                <div class="ip-prescription-grid ip-prescription-grid-bottom">
                    <div class="ip-prescription-section">
                        <h3 class="ip-prescription-section-title">Prescription Details</h3>
                        <div class="ip-prescription-field"><span>Prescription Date:</span><span>@SelectedPrescription.Time</span></div>
                        <div class="ip-prescription-field"><span>Validity Period:</span><span></span></div>
                        <div class="ip-prescription-field"><span>Priority:</span><span></span></div>
                    </div>

                    <div class="ip-prescription-section">
                        <h3 class="ip-prescription-section-title">Medication</h3>
                        <table class="ip-prescription-med-table">
                            <thead>
                                <tr>
                                    <th>Medicine</th>
                                    <th>Dosage</th>
                                    <th>Frequency</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@SelectedPrescription.Items</td>
                                    <td>@(SelectedDetails?.Dosage ?? string.Empty)</td>
                                    <td>@(SelectedDetails?.Frequency ?? string.Empty)</td>
                                    <td>@(SelectedDetails?.Duration ?? string.Empty)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="ip-prescription-actions">
                    <button type="button" class="ip-prescription-close" @onclick="ClosePrescriptionPanel">Close</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Inject]
    private IPrescriptionService PrescriptionService { get; set; } = default!;

    private bool ShowPrescriptionPanel { get; set; }
    private bool ShowLetters { get; set; } = false;
    private bool ShowArchived { get; set; }
    private PrescriptionListItem? SelectedPrescription { get; set; }
    private IT_13FinalProject.Models.HealthRecord? SelectedDetails { get; set; }

    private string SearchTerm { get; set; } = string.Empty;
    private int PageSize { get; set; } = 5;
    private int CurrentPage { get; set; } = 1;
    private int TotalCount { get; set; }
    private int TotalPages => Math.Max(1, (int)Math.Ceiling((double)TotalCount / PageSize));

    private IReadOnlyList<PrescriptionListItem> PagedPrescriptions { get; set; } = Array.Empty<PrescriptionListItem>();
    
    private readonly char[] Alphabet =
        "ABCDEFGHIJKLMNOPQRSTUVWXYZ".ToCharArray();

    protected override async Task OnInitializedAsync()
    {
        await LoadPageAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        // keep list fresh when navigation reuses component
        await LoadPageAsync();
    }

    private async Task LoadPageAsync()
    {
        // clamp current page to bounds based on latest count
        var (items, totalCount) = await PrescriptionService.GetPageAsync(ShowArchived, SearchTerm, CurrentPage, PageSize);
        TotalCount = totalCount;
        CurrentPage = Math.Min(CurrentPage, TotalPages);
        if (CurrentPage < 1) CurrentPage = 1;

        // reload after clamping
        (items, totalCount) = await PrescriptionService.GetPageAsync(ShowArchived, SearchTerm, CurrentPage, PageSize);
        TotalCount = totalCount;
        PagedPrescriptions = items;

        // Close panel if selection no longer in the current dataset
        if (SelectedPrescription != null && !PagedPrescriptions.Any(p => p.RecordId == SelectedPrescription.RecordId))
        {
            SelectedPrescription = null;
            SelectedDetails = null;
            ShowPrescriptionPanel = false;
        }
    }

    private void SetArchiveView(bool showArchived)
    {
        ShowArchived = showArchived;
        CurrentPage = 1;
        _ = LoadPageAsync();
    }

    private async Task OpenPrescriptionPanel(PrescriptionListItem row)
    {
        SelectedPrescription = row;
        SelectedDetails = await PrescriptionService.GetByRecordIdAsync(row.RecordId);
        ShowPrescriptionPanel = true;
    }

    private void ClosePrescriptionPanel()
    {
        ShowPrescriptionPanel = false;
        SelectedPrescription = null;
        SelectedDetails = null;
    }

    private async Task OnSearchInput(ChangeEventArgs e)
    {
        SearchTerm = e?.Value?.ToString() ?? string.Empty;
        CurrentPage = 1;
        await LoadPageAsync();
    }

    private async Task ArchivePrescriptionAsync(PrescriptionListItem row)
    {
        await PrescriptionService.ArchiveAsync(row.RecordId);
        await LoadPageAsync();
    }

    private async Task RestorePrescriptionAsync(PrescriptionListItem row)
    {
        await PrescriptionService.RestoreAsync(row.RecordId);
        await LoadPageAsync();
    }

    private async Task OnPageSizeChanged()
    {
        CurrentPage = 1;
        await LoadPageAsync();
    }

    private async Task PrevPage()
    {
        if (CurrentPage <= 1) return;
        CurrentPage--;
        await LoadPageAsync();
    }

    private async Task NextPage()
    {
        if (CurrentPage >= TotalPages) return;
        CurrentPage++;
        await LoadPageAsync();
    }
}










